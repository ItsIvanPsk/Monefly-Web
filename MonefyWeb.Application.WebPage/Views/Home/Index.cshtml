@{
    ViewData["Title"] = "Monefy Web";
    var jsonData = Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ChartData);
}

@model MonefyWeb.Application.WebPage.Models.TemporalHelperModel;

<style>
    body {
        background: -webkit-linear-gradient(to top, #1b263b 0%, #415a77 100%);
        background-image: linear-gradient(to top, #1b263b 0%, #415a77 100%);
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        flex-direction: column;
        border: none;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 60px);
        position: relative;
    }

    #donutchart {
        width: 900px;
        height: 500px;
        position: relative;
        background: transparent;
    }

    .balance-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    }

    .btn-success,
    .btn-danger {
        margin: 0 10px;
    }

    .icon-container {
        position: absolute; /* Posición absoluta para los iconos */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        right: 20px; /* Ajusta la posición a la derecha según tus necesidades */
        top: 50%; /* Posiciona los iconos verticalmente en el centro */
        transform: translateY(-50%);
    }

    .icon {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        cursor: pointer; /* Cambia el cursor a puntero para indicar que son clicables */
    }

        .icon img {
            width: 24px; /* Ajusta el tamaño de la imagen según tus necesidades */
            height: 24px;
            margin-right: 5px; /* Espacio entre la imagen y el porcentaje */
        }

    #donutchart text {
        fill: white;
    }

    #legend-container {
        display: flex;
        justify-content: space-between; /* Espacio entre las columnas */
    }

    .legend-column {
        flex: 1; /* Distribuir el espacio igualmente entre las columnas */
        padding: 10px;
    }

    .legend-item {
        margin: 5px 0;
        /* Estilos de las categorías en la leyenda */
    }

</style>

<div class="container">
    <h1 class="display-4">Monefy Web Page</h1>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</div>
